<div class="communityBody" id="communityBody"> 

{{#if logged_in}}
  <section class = "container">
    <h1 class="community-title"> Restful Community</h1>
    <h2 class= "introduction"> Hi {{user.user_name}}, welcome to the Restful Community!
      This is a safe place to share tips, tricks and workout motivation. </h2>  
<h3> What would you like to share?</h3>
  <div class="col-8">
    <input
      class="blogTitle"
      id = "blogTitle"
      placeholder="Enter Title Here"
      maxlength="3000"
      type="text"
    />
    <textarea class="note-textarea" id="textarea" placeholder="Enter Text Here"></textarea>
    <button class="btn btn-primary" id="submitBlog" type="submit">submit</button>
  </div>

  <div class="blog-message-container">
        <h3 id="blog-message"></h3>
    </div>

  <section class="flex-row justify-center notes">
    {{#each blogs as |blog|}}
   <h2>{{blog.title}}</h2> 
    <h3>{{blog.textarea}} </h3>
    {{/each}}
  </section>
  <script src="/js/blog.js"></script>
  </section>
  {{/if}}

  </div>
