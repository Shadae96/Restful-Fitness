<h2>New User Registration</h2>

<form class="form newUser-form">
    <div class="form-group-newUser">
    <label for="name">Name:</label>
    <input class="form-input" type="text" placeholder ="ex. John Doe"id="name" />
  </div>

  <div class="form-group-newUser">
    <label for="email">email:</label>
    <input class="form-input" type="text" placeholder="email" id="email" />
  </div>
  <div class="form-group-newUser">
    <label for="password">password:</label>
    <input class="form-input" type="password" placeholder="8-12 characters" id="password" />
  </div>
    <div class="form-group-newUser">
    <label for="password2">Confirm password:</label>
    <input class="form-input" type="password" placeholder="8-12 characters" id="password2" />
  </div>
    <div class="form-group-newUser">
    <label for="age">Age:</label>
    <input class="form-input" type="text" placeholder="25" id="age" />
  </div>
    <div class="form-group-newUser">
    <label for="weight">Weight:</label>
    <input class="form-input" type="text" placeholder="200" id="weight" />
  </div>
    <div class="form-group-newUser">
    <label for="height">Height(cm):</label>
    <input class="form-input" type="text" placeholder="180" id="height" />
  </div>
  <div class="form-group-newUser">
    <button class="btn btn-primary" type="submit" id="newUserRegForm">Submit</button>
  </div>
</form>

<script src="/js/register.js"></script>